<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/crypter"
    android:padding="20dp">

    <EditText
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:id="@+id/editText"
        android:layout_x="-2dp"
        android:layout_y="55dp"
        android:hint="Email" />

    <EditText
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:id="@+id/editText2"
        android:layout_x="-2dp"
        android:layout_y="113dp"
        android:hint="Nom de fichier" />

    <EditText
        android:layout_width="262dp"
        android:layout_height="50dp"
        android:id="@+id/editText3"
        android:layout_x="-2dp"
        android:layout_y="170dp"
        android:hint="Choisir un fichier ..." />

    <EditText
        android:layout_width="318dp"
        android:layout_height="180dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_x="0dp"
        android:layout_y="230dp"
        android:autoText="false"
        android:hint="Message" />

    <Button
        android:layout_width="324dp"
        android:layout_height="40dp"
        android:text="Cryter et envoyer"
        android:id="@+id/button"
        android:layout_x="0dp"
        android:layout_y="450dp"
        android:background="#bdc759"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="@dimen/padding_large" />
</AbsoluteLayout>